<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@color/black"
tools:context=".UpdateActivity"
android:orientation="vertical">

    <!--Title-->
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spend"
            android:textColor="#2bb0c0"
            android:textSize="25dp"
            android:textAlignment="viewEnd"
            android:textStyle="bold"
            android:paddingBottom="15dp"
            android:background="#212222"
            android:layout_weight="1"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wise"
            android:textColor="#ffc12c"
            android:textSize="25dp"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:paddingBottom="15dp"
            android:background="#212222"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Transaction"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginBottom="5dp"/>



<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="#373535"
    android:padding="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Amount"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:padding="5dp"
                android:backgroundTint="#5C5959"
                app:cardCornerRadius="25dp">

                <EditText
                    android:id="@+id/amount"
                    android:background="@android:color/transparent"
                    android:layout_marginHorizontal="15dp"
                    android:inputType="number"
                    android:padding="3dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>

            <RadioGroup
                android:id="@+id/typeRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="8dp"
                >

                <RadioButton
                    android:id="@+id/expenseRadio"
                    android:text="Expense"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id="@+id/incomRadio"
                    android:text="Income"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/blue"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>

            </RadioGroup>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:text="Category"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/blue"/>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:paddingHorizontal="5dp"
                android:backgroundTint="#5C5959"
                app:cardCornerRadius="25dp">

                <Spinner
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="10dp"
                    style="@android:style/Widget.Material.Spinner.Underlined"
                    android:layout_height="wrap_content"
                    android:theme="@style/MatchSpinnerTheme"
                    android:popupBackground="@drawable/bg_spinner"
                    android:spinnerMode="dropdown"/>
            </androidx.cardview.widget.CardView>



        </LinearLayout>


        <TextView
            android:id="@+id/anc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Add New Category"
            android:textAlignment="viewEnd"
            android:textColor="@color/blue"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Note"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:backgroundTint="#5C5959"
                app:cardCornerRadius="25dp">
                <EditText
                    android:id="@+id/note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_marginHorizontal="15dp"
                    android:padding="3dp"
                    android:textSize="20sp"/>

            </androidx.cardview.widget.CardView>






        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/updateExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                app:cornerRadius="50dp"
                android:text="Update"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAllCaps="false"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteExpense"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                app:cornerRadius="50dp"
                android:text="Delete"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textAllCaps="false"/>








        </LinearLayout>






    </LinearLayout>



</androidx.cardview.widget.CardView>




</LinearLayout>